         <xs:documentation>
            <xd:section xmlns:xd="http://www.oecd.org/ns/schema/xdocs">
               <xd:title>Categories</xd:title>
               <xd:p>inline</xd:p>
            </xd:section> Superscript inline </xs:documentation>
      </xs:annotation>
      <xs:sequence>
         <xs:choice maxOccurs="unbounded"/>
