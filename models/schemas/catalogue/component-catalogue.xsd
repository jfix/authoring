               <xd:p/>
            </xd:section> Simple Blocks </xs:documentation>
      </xs:annotation>
      <xs:sequence>
         <xs:choice maxOccurs="unbounded">
            <xs:element name="simple-para" type="simple-para"/>
            <xs:element name="paragraph-group" type="paragraph-group"/>
            <xs:element name="ordered-list" type="ordered-list"/>
            <xs:element name="itemized-list" type="itemized-list"/>
            <xs:element name="figure" type="figure"/>
            <xs:element name="graphic" type="graphic"/>
            <xs:element name="extract" type="extract"/>
         </xs:choice>
      </xs:sequence>
   </xs:complexType>
   <xs:complexType name="grp-simple-inlines">
      <xs:annotation>
         <xs:documentation>
            <xd:section xmlns:xd="http://www.oecd.org/ns/schema/xdocs">
               <xd:title>Categories</xd:title>
               <xd:p/>
            </xd:section> Simple Inlines </xs:documentation>
      </xs:annotation>
      <xs:sequence>
         <xs:choice maxOccurs="unbounded">
            <xs:element name="chemical-formula" type="chemical-formula"/>
            <xs:element name="equation" type="equation"/>
            <xs:element name="phrase" type="phrase"/>
            <xs:element name="formatting-tag" type="formatting-tag"/>
            <xs:element name="index-term" type="index-term"/>
            <xs:element name="footnote" type="footnote"/>
            <xs:element name="citation" type="citation"/>
